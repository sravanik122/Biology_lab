{
  "epochs": 40,
  "batch_size": 16,
  "validation_split": 0.2,

  "optimizer": {
    "type": "adam",
    "learning_rate": 0.001,
    "beta_1": 0.9,
    "beta_2": 0.999,
    "epsilon": 1e-07
  },

  "model_layers": [128, 64, 32],

  "loss": "mse",
  "metrics": ["mae"],

  "tensorboard_logdir": "./logs/model_training",
  "model_save_path": "./models/yeast_respiration_model.keras",
  "random_seed": 42,

  "callbacks": {
    "enable_tensorboard": true,
    "enable_early_stopping": true,
    "early_stopping_patience": 6,
    "early_stopping_min_delta": 1e-4,
    "enable_checkpoint": true,
    "checkpoint_save_best_only": true,
    "checkpoint_monitor": "val_loss",
    "checkpoint_dir": "./models/checkpoints"
  },

  "lr_schedule": {
    "type": "reduce_on_plateau",
    "monitor": "val_loss",
    "factor": 0.5,
    "patience": 3,
    "min_lr": 1e-6
  },

  "training": {
    "shuffle": true,
    "verbose": 1,
    "use_gpu": true
  },

  "notes": "Input features should be normalized; targets are final_cells and co2 (or timeline params). Adjust model_layers for capacity."
}
